<h2>Algo %</h2>

<% if @bank %>
	<table>
		<thead>
			<th>Sociedad</th>
			<th>Cartolas Recibidas</th>
			<th>Cartolas Esperadas</th>
			<th>Progreso</th>
		</thead>
		<tbody>
		  <% @societies.each do |society| %>
		    <tr>
		    	<td><%= link_to society.name, progress_tax_path(society.taxes.find_by(bank_id: @bank.id)) %></td>
		    </tr>
		  <% end %>
		</tbody>
	</table>
<% else %>
	<table>
		<thead>
			<th>IF</th>
			<th>Cartolas Recibidas</th>
			<th>Cartolas Esperadas</th>
			<th>Progreso</th>
		</thead>
		<tbody>
		  <% @banks.each do |bank| %>
		    <tr>
		    	<td><%= link_to bank.name, progress_bank_path(bank) %></td>
		    </tr>
		  <% end %>
		</tbody>
	</table>
<% end %>