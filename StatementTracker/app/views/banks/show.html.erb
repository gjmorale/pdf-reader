<h1>
  <%= @bank.name %>
</h1>

<p>
  <strong>Nombre de Carpeta:</strong>
  <%= @bank.folder_name %>
</p>

<p>
  <strong>Código:</strong>
  <%= @bank.code_name %>
</p>


<h2>Sinónimos:</h2>
<% @bank.synonyms.each do |syn| %>
	<%= syn.label %> 
    <%= link_to 'X', synonym_path("#{syn.id}"), method: :delete %><br>
<% end %>

<div class="actions">
	<%= link_to 'Edit', edit_bank_path(@bank), {class: "button"} %>
	<%= link_to 'Back', banks_path, {class: "button"} %>
</div>
