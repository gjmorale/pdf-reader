<%= form_for(society) do |f| %>
  <% if society.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(society.errors.count, "error") %> prohibited this society from being saved:</h2>

      <ul>
      <% society.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :rut %>
    <%= f.text_field :rut %>
  </div>

  <% if society.taxes.any? %>
    <h2>Nuevo Checkmov:</h2>
    <%= f.fields_for(:checkmovs, Checkmov.new) do |c| %>
      <div class="field">
        <%= c.label :path %>
        <%= c.text_field :path %>
      </div>
    <% end %>
  <% end %>

  <div class="actions">
    <%= f.submit "Editar Sociedad" %>
  </div>
<% end %>

<% if society.taxes.any? %>
  <%= form_for(society) do |f| %>

    <% if society.checkmovs.any? %>
      <h2>Checkmovs:</h2>
      <% society.checkmovs.each do |check| %>
        <%= f.fields_for(:checkmovs, check) do |c| %>
          <div class="field">
            <%= c.label :path %>
            <%= c.text_field :path %>
            <%= c.label :destroy %>
            <%= c.check_box :_destroy %>
          </div>
        <% end %>
      <% end %>
    <% end %>
    <div class="actions">
      <%= f.submit "Editar Checkmovs" %>
    </div>
  <% end %>
<% end %>
