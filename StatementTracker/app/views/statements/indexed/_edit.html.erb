<td><%= text_field_tag "statements[#{statement.id}][file_name]", statement.file_name %></td>
<td><%= statement.eq_text %></td>
<td><%= collection_select("statements[#{statement.id}]", :society_id, Society.all, :id, :name, selected: (statement.society ? statement.society.id : ""), prompt: true) %></td>
<td><%= collection_select("statements[#{statement.id}]", :bank_id, Bank.all, :id, :name, selected: statement.bank.id) %></td>
<td><%= number_field_tag("statements[#{statement.id}[year]]", statement.sequence.year, in: 2010..Date.current.year) if statement.sequence %></td>
<td><%= number_field_tag("statements[#{statement.id}[month]]", statement.sequence.month, in: 1..12) if statement.sequence and statement.sequence.month? %></td>
<td><%= number_field_tag("statements[#{statement.id}[week]]", statement.sequence.week, in: 1..5) if statement.sequence and statement.sequence.week? %></td>
<td><%= number_field_tag("statements[#{statement.id}[day]]", statement.sequence.day, in: 1..31) if statement.sequence and statement.sequence.day? %></td>
<td><%= link_to 'Show', statement %></td>
<td><%= link_to 'Edit', edit_statement_path(statement) %></td>
<td><%= link_to 'Destroy', statement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
