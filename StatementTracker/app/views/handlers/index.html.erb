<p id="notice"><%= notice %></p>

<h1>Handlers</h1>

<table>
  <thead>
    <tr>
      <th>Repo path</th>
      <th>Local path</th>
      <th>Short name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @handlers.each do |handler| %>
      <tr>
        <td><%= handler.repo_path %></td>
        <td><%= handler.local_path %></td>
        <td><%= handler.short_name %></td>
        <td><%= link_to 'Show', handler %></td>
        <td><%= link_to 'Edit', edit_handler_path(handler) %></td>
        <td><%= link_to 'Destroy', handler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

