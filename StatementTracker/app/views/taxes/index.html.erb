
<h1>Taxes</h1>

<table>
  <thead>
    <tr>
      <th>Bank</th>
      <th>Society</th>
      <th>Quantity</th>
      <th>Periodicity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taxes.each do |tax| %>
      <tr>
        <td><%= tax.bank %></td>
        <td><%= link_to tax.society, society_path(tax.society) %></td>
        <td><%= tax.quantity %></td>
        <td><%= tax.periodicity %></td>
        <td><%= link_to 'Show', tax %></td>
        <td><%= link_to 'Edit', edit_tax_path(tax) %></td>
        <td><%= link_to 'Destroy', tax, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tax', new_tax_path %>
