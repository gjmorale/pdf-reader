<h1>
  <%= link_to @tax.bank, @tax.bank %> - <%= link_to @tax.society, @tax.society %>
</h1>

<h4>Espera <%= @tax.quantity %> cartolas al <%= @tax.periodicity %></h4>

<h2>Fuentes:</h2>
<ul>
<% @tax.source_paths.each do |source_path| %>
  <li>
    <%= source_path %>
  </li>
<% end %>
</ul>
<h3>Nueva fuente</h3>
<%= form_for(@tax) do |f| %>
	<div class="nested-form">
		<%= f.fields_for :source_paths, @tax.source_paths.build do |s| %>
	    <div class="field xl-field">
	      <%= s.text_field :path, value: @tax.society.path %>
	    </div>
		<% end %>
	</div>
	<div class="actions">
		<%= f.submit "Agregar Ruta" %>
	</div>
<% end %>

<h2>Per√≠odos:</h2>
<ul>
<% @tax.sequences.each do |sequence| %>
  <li>
    <%= link_to "#{sequence.date.to_s} (#{sequence.statements.size})", sequence %>
  </li>
<% end %>
</ul>

